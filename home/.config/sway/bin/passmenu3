#!/bin/bash

shopt -s nullglob globstar

prefix=${PASSWORD_STORE_DIR-~/.password-store}
pass_files=("$prefix"/**/*.gpg)
pass_files=("${pass_files[@]#"$prefix"/}")
pass_files=("${pass_files[@]%.gpg}")

pass_files_lenght=${#pass_files[@]}
pass_files_lenght=$((pass_files_lenght > 10 ? 10 : pass_files_lenght))

password=$(printf '%s\n' "${pass_files[@]}" | wmenu -i -l "$pass_files_lenght" -p "Pass:" "$@")
[[ -n $password ]] || exit

password_content=$(pass show "$password" 2>/dev/null)
[[ -n $password_content ]] || exit

keys=("Password")
otp_found=false
empty_line_found=false

while IFS= read -r line; do
	if [[ -z $line ]]; then
		empty_line_found=true

	elif ! $empty_line_found; then
		if [[ $otp_found = false && $line =~ ^otpauth:// ]]; then
			keys+=("OTP")
			otp_found=true

		elif [[ $line =~ ^([^[:space:]]+):[[:space:]]+.+ ]]; then
			keys+=("${BASH_REMATCH[1]}")
		fi
	fi
done < <(echo "$password_content" | tail -n +2)

keys_length=${#keys[@]}
keys_length=$((keys_length > 10 ? 10 : keys_length))

selection=$(printf '%s\n' "${keys[@]}" | wmenu -i -l "$keys_length" -p "Pass:" "$@")
[[ -n $selection ]] || exit

case $selection in
	"Password")
		echo "$password_content" | head -n 1 | tr -d '\n' | wtype -
		;;
	"OTP")
		pass otp "$password" 2>/dev/null | tr -d '\n' | wtype -
		;;
	*)
		value=$(echo "$password_content" | grep "^$selection: " | cut -d' ' -f2-)
		echo -n "$value" | wtype -
		;;
esac
